{
    "compilerOptions": {"sourceMap": true, "baseUrl": "./src",
    "paths": {
        "@/*": ["./*"],
        "@models/*": ["models/*"],
        "@controllers/*": ["controllers/*"],
        "@routes/*": ["routes/*"]
    },
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*","src/jest.config.ts"],
    "exclude": ["src/types/*.ts", "node_modules", ".vscode", ".idea"],
   
    "ts-node": {
      "require": ["tsconfig-paths/register"]
}
}